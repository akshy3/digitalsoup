---
import Container from "../components/Container.astro";
import Layout from "../layouts/Layout.astro";

const tiers = [
  {
    name: "Starter",
    price: "$900",
    description: "For small teams building a reliable growth foundation.",
    points: ["Channel audit + quick wins", "Monthly campaign management", "Bi-weekly reporting call"],
    cta: "Choose Starter",
  },
  {
    name: "Growth",
    price: "$2,400",
    description: "For teams ready to scale with structured experiments.",
    points: ["Multi-channel strategy + execution", "Creative testing program", "Weekly dashboard + optimization"],
    cta: "Choose Growth",
  },
  {
    name: "Performance Partner",
    price: "Custom",
    description: "For brands that need a full-funnel performance team.",
    points: ["Dedicated pod and planning cadence", "Advanced attribution support", "Executive growth reporting"],
    cta: "Talk to us",
  },
];
---

<Layout title="DigitalSoup Pricing">
  <main class="pb-10 pt-36 md:pt-40">
    <Container>
      <section class="section-shell p-8 md:p-10">
        <p class="section-kicker">Pricing</p>
        <h1 class="mt-4 text-4xl font-bold text-[#0b1220] md:text-5xl">Straightforward plans for different growth stages</h1>
        <p class="mt-3 max-w-2xl text-[#3d4d72]">No hidden costs. Every plan is outcome-focused and tailored to your goals.</p>

        <div class="mt-8 grid gap-4 md:grid-cols-3">
          {tiers.map((tier, index) => (
            <article class={`rounded-2xl border p-6 ${index === 1 ? "border-[#ff6b2c] bg-[#fff5f0]" : "border-[#1f2d4a24] bg-white/80"}`}>
              <h2 class="text-2xl font-bold text-[#111c34]">{tier.name}</h2>
              <p class="mt-2 text-3xl font-extrabold text-[#0b1220]">{tier.price}<span class="ml-1 text-sm font-medium text-[#5f6e91]">/ month</span></p>
              <p class="mt-2 text-sm text-[#4b5c81]">{tier.description}</p>
              <ul class="mt-5 space-y-2 text-sm text-[#314264]">
                {tier.points.map((point) => <li>- {point}</li>)}
              </ul>
              <a href="/contact" class={`mt-6 inline-flex w-full justify-center rounded-xl px-4 py-3 text-sm font-semibold ${index === 1 ? "bg-[#ff6b2c] text-white" : "border border-[#1f2d4a30] bg-white text-[#111c34]"}`}>{tier.cta}</a>
            </article>
          ))}
        </div>
      </section>
    </Container>
  </main>
</Layout>