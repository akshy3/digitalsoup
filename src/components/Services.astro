---
import Container from "./Container.astro";
import Topic from "./Topic.astro";

const offerings = [
  {
    title: "Growth Strategy",
    forWho: "For teams that need clarity before spending more budget.",
    items: ["Channel prioritization", "Messaging direction", "90-day action roadmap"],
  },
  {
    title: "Paid Media Management",
    forWho: "For brands that want disciplined campaign execution.",
    items: ["Campaign structure and setup", "Creative testing cycles", "Weekly optimization reviews"],
  },
  {
    title: "SEO and Content",
    forWho: "For businesses building consistent inbound demand.",
    items: ["Technical and on-page cleanup", "Content planning and briefs", "Conversion-aware content updates"],
  },
  {
    title: "Landing Pages and CRO",
    forWho: "For teams with traffic but weak conversion flow.",
    items: ["Offer and page structure", "Funnel friction fixes", "A/B testing backlog"],
  },
];
---

<section id="services" class="pt-8 md:pt-12">
  <Container>
    <div class="section-shell p-5 sm:p-7 md:p-10">
      <Topic
        title="Services Designed Around Business Priorities"
        description="We keep scope practical: strategy, execution, and optimization focused on the channels that matter most for your stage."
      />

      <div class="grid grid-cols-1 gap-3 md:grid-cols-2 md:gap-4">
        {offerings.map((service) => (
          <article class="group rounded-2xl border border-[#1f2d4a24] bg-white/85 p-4 transition hover:-translate-y-1 hover:border-[#1f2d4a40] sm:p-6">
            <div class="flex items-start justify-between gap-4">
              <div>
                <h3 class="text-xl font-semibold text-[#111c34] sm:text-2xl">{service.title}</h3>
                <p class="mt-2 text-sm text-[#4c5d83]">{service.forWho}</p>
              </div>
            </div>

            <div class="mt-4 grid grid-cols-1 gap-2 text-sm text-[#2b3e66]">
              {service.items.map((item) => (
                <p class="rounded-lg bg-[#edf2ff] px-3 py-2 font-medium">{item}</p>
              ))}
            </div>
          </article>
        ))}
      </div>

      <div class="mt-6 rounded-2xl border border-[#1f2d4a24] bg-[#f5f8ff] p-5 sm:p-7 md:mt-8 md:p-8">
        <div class="grid grid-cols-1 gap-4 md:grid-cols-[1.2fr_0.8fr] md:items-center">
          <div>
            <p class="section-kicker">Engagement model</p>
            <h3 class="mt-3 text-xl font-bold text-[#0f1b33] sm:text-2xl">How we start working together</h3>
            <div class="mt-3 grid grid-cols-1 gap-2 text-sm text-[#43557c] sm:grid-cols-3">
              <p class="rounded-lg border border-[#1f2d4a1f] bg-white px-3 py-2"><strong class="text-[#0f1b33]">Step 1:</strong> Discovery call</p>
              <p class="rounded-lg border border-[#1f2d4a1f] bg-white px-3 py-2"><strong class="text-[#0f1b33]">Step 2:</strong> Scope and priorities</p>
              <p class="rounded-lg border border-[#1f2d4a1f] bg-white px-3 py-2"><strong class="text-[#0f1b33]">Step 3:</strong> Weekly delivery rhythm</p>
            </div>
          </div>
          <div class="md:justify-self-end">
            <a href="/contact" class="btn-primary w-full sm:w-auto">Discuss your goals</a>
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>
