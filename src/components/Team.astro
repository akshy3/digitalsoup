---
import Container from "./Container.astro";
import Topic from "./Topic.astro";
import teamData from "./Data/team.json";
---

<section id="team" class="pt-8 md:pt-12">
  <Container>
    <div class="section-shell p-5 sm:p-7 md:p-10">
      <Topic
        title="The Team Behind the Results"
        description="A senior team that combines strategic depth, platform expertise, and relentless execution to move metrics that matter."
      />

      <div class="grid grid-cols-1 gap-3 md:grid-cols-3 md:gap-4">
        {teamData.team.map(({ title, description, name, link, profile }) => (
          <article class="rounded-2xl border border-[#1f2d4a24] bg-white/80 p-4 sm:p-6">
            <div class="flex items-start justify-between gap-2">
              <div class="flex items-center gap-3 sm:gap-4">
                <img src={profile} alt={name} class="h-12 w-12 rounded-xl border border-[#1f2d4a1f] object-cover sm:h-14 sm:w-14" />
                <div>
                  <p class="text-xs font-semibold uppercase tracking-[0.08em] text-[#5a6b91]">{title}</p>
                  <h3 class="text-base font-bold text-[#111c34] sm:text-lg">{name}</h3>
                </div>
              </div>
              <a class="rounded-lg border border-[#1f2d4a1f] p-2 text-[#ff6b2c]" href={link} aria-label={`View ${name} profile`}>
                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5">
                  <path d="M14 3H21V10" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"></path>
                  <path d="M10 14L21 3" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"></path>
                  <path d="M21 14V20C21 20.5304 20.7893 21.0391 20.4142 21.4142C20.0391 21.7893 19.5304 22 19 22H4C3.46957 22 2.96086 21.7893 2.58579 21.4142C2.21071 21.0391 2 20.5304 2 20V5C2 4.46957 2.21071 3.96086 2.58579 3.58579C2.96086 3.21071 3.46957 3 4 3H10" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"></path>
                </svg>
              </a>
            </div>
            <p class="mt-3 text-sm leading-relaxed text-[#4a5b80] sm:mt-4">{description}</p>
          </article>
        ))}
      </div>
    </div>
  </Container>
</section>
