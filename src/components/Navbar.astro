---
import Container from "./Container.astro";

const menuitems = [
  { href: "/about", label: "About" },
  { href: "/#services", label: "Services" },
  { href: "/#team", label: "Team" },
  { href: "/contact", label: "Contact" },
];
---

<header class="fixed top-0 left-0 z-50 w-full">
  <Container>
    <nav class="mt-4 section-shell px-4 py-3 md:px-6">
      <div class="flex items-center justify-between gap-4">
        <a href="/" class="flex items-center gap-3">
          <span class="inline-flex h-10 w-10 items-center justify-center rounded-xl bg-[#0b1220] text-sm font-bold text-white">DS</span>
          <div>
            <p class="text-lg font-bold text-[#111c34]">DigitalSoup</p>
            <p class="text-xs text-[#617095]">Growth studio</p>
          </div>
        </a>

        <ul class="hidden items-center gap-2 md:flex">
          {menuitems.map((item) => (
            <li>
              <a class="rounded-xl px-3 py-2 text-sm font-medium text-[#233357] transition hover:bg-white/80" href={item.href}>{item.label}</a>
            </li>
          ))}
        </ul>

        <a class="btn-primary text-sm" href="/contact">Book a strategy call</a>
      </div>

      <ul class="mt-3 grid grid-cols-2 gap-2 md:hidden">
        {menuitems.map((item) => (
          <li>
            <a class="block rounded-lg border border-[#1f2d4a1f] bg-white/70 px-3 py-2 text-center text-sm font-medium" href={item.href}>{item.label}</a>
          </li>
        ))}
      </ul>
    </nav>
  </Container>
</header>