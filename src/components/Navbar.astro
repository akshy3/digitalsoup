---
import Container from "./Container.astro";

const menuitems = [
  { href: "/about", label: "About" },
  { href: "/#services", label: "Services" },
  { href: "/#process", label: "Process" },
  { href: "/#results", label: "Results" },
  { href: "/contact", label: "Contact" },
];
---

<header class="fixed top-0 left-0 z-50 w-full">
  <Container>
    <nav class="mt-3 section-shell px-3 py-3 md:mt-4 md:px-6">
      <div class="flex items-center justify-between gap-3">
        <a href="/" class="flex items-center gap-3">
          <span class="inline-flex h-9 w-9 items-center justify-center rounded-xl bg-[#0b1220] text-xs font-bold text-white md:h-10 md:w-10 md:text-sm">DS</span>
          <div>
            <p class="text-base font-bold text-[#111c34] md:text-lg">DigitalSoup</p>
            <p class="text-xs text-[#617095]">Growth studio</p>
          </div>
        </a>

        <ul class="hidden items-center gap-2 lg:flex">
          {menuitems.map((item) => (
            <li>
              <a class="rounded-xl px-3 py-2 text-sm font-medium text-[#233357] transition hover:bg-white/80" href={item.href}>{item.label}</a>
            </li>
          ))}
        </ul>

        <a class="btn-primary hidden text-sm lg:inline-flex" href="/contact">Book a strategy call</a>

        <details class="group lg:hidden">
          <summary class="flex h-10 w-10 cursor-pointer list-none items-center justify-center rounded-xl border border-[#1f2d4a2b] bg-white/80 text-[#1a2a4a]">
            <span class="group-open:hidden">
              <svg viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 7h16M4 12h16M4 17h16"></path>
              </svg>
            </span>
            <span class="hidden group-open:block">
              <svg viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 6L6 18M6 6l12 12"></path>
              </svg>
            </span>
          </summary>
          <div class="absolute left-4 right-4 top-[74px] rounded-2xl border border-[#1f2d4a22] bg-white/95 p-3 shadow-xl backdrop-blur md:left-8 md:right-8">
            <ul class="grid grid-cols-2 gap-2">
              {menuitems.map((item) => (
                <li>
                  <a class="block rounded-lg border border-[#1f2d4a1f] bg-white px-3 py-2 text-center text-sm font-medium" href={item.href}>{item.label}</a>
                </li>
              ))}
            </ul>
            <a class="btn-primary mt-3 w-full text-sm" href="/contact">Book a strategy call</a>
          </div>
        </details>
      </div>
    </nav>
  </Container>
</header>
