---
import Container from "./Container.astro";
---

<section class="pt-36 md:pt-40">
  <Container>
    <div class="section-shell overflow-hidden p-8 md:p-12">
      <div class="grid items-center gap-10 lg:grid-cols-[1.1fr_0.9fr]">
        <div class="space-y-7">
          <p class="section-kicker fade-up">Digital Growth, Engineered</p>
          <h1 class="fade-up fade-delay-1 text-4xl font-extrabold leading-tight text-[#0b1220] md:text-6xl">
            Your brand deserves more than generic marketing.
          </h1>
          <p class="fade-up fade-delay-2 max-w-xl text-lg leading-relaxed text-[#33415f]">
            We blend strategy, design, and performance media to turn noisy campaigns into predictable revenue systems.
          </p>
          <div class="fade-up fade-delay-2 flex flex-wrap gap-3">
            <a href="/contact" class="btn-primary">Start your growth sprint</a>
            <a href="#services" class="btn-secondary">Explore services</a>
          </div>
          <div class="grid max-w-xl grid-cols-3 gap-3 pt-2">
            <div class="rounded-2xl border border-[#1f2d4a26] bg-white/70 p-3">
              <p class="text-2xl font-bold text-[#111c34]">3.8x</p>
              <p class="text-xs text-[#556487]">Avg. ROAS increase</p>
            </div>
            <div class="rounded-2xl border border-[#1f2d4a26] bg-white/70 p-3">
              <p class="text-2xl font-bold text-[#111c34]">90d</p>
              <p class="text-xs text-[#556487]">Time to momentum</p>
            </div>
            <div class="rounded-2xl border border-[#1f2d4a26] bg-white/70 p-3">
              <p class="text-2xl font-bold text-[#111c34]">50+</p>
              <p class="text-xs text-[#556487]">Brands accelerated</p>
            </div>
          </div>
        </div>

        <div class="relative">
          <div class="absolute -left-8 -top-8 h-28 w-28 rounded-full bg-[#48d8b14f] blur-2xl"></div>
          <div class="absolute -bottom-8 -right-8 h-28 w-28 rounded-full bg-[#ff6b2c4d] blur-2xl"></div>
          <div class="relative rounded-3xl border border-[#1f2d4a2e] bg-[#0f1b33] p-8 text-white shadow-2xl">
            <img src="/logo.png" class="mx-auto h-24 w-auto" alt="DigitalSoup logo" />
            <p class="mt-6 text-center text-lg font-semibold">A creative growth partner for ambitious businesses</p>
            <div class="mt-6 space-y-3 text-sm text-[#d6def5]">
              <p class="rounded-xl bg-white/10 px-4 py-3">Paid media + creative testing loops</p>
              <p class="rounded-xl bg-white/10 px-4 py-3">SEO + content systems built for conversion</p>
              <p class="rounded-xl bg-white/10 px-4 py-3">Weekly reporting focused on business outcomes</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>